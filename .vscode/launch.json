{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Dashboard Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.dashboard.server",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Run Pipeline",
            "type": "python",
            "request": "launch",
            "module": "app.pipeline.run_all",
            "args": ["--rebuild"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest: Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "tests/"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}